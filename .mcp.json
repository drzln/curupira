{
  "mcpServers": {
    "curupira": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "drzzln/curupira:latest"],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info"
      }
    },
    "curupira-local": {
      "command": "node",
      "args": ["mcp-server/dist/cli.js", "start"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug",
        "PORT": "8080",
        "HOST": "0.0.0.0"
      }
    }
  }
}

