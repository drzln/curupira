{
  "name": "@curupira/e2e-tests",
  "version": "2.4.27",
  "description": "End-to-end tests for Curupira MCP debugging tool",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "setup": "npm run test:install && npm run test:install-deps",
    "clean": "rimraf test-results playwright-report coverage"
  },
  "dependencies": {
    "@curupira/shared": "workspace:*",
    "@playwright/test": "^1.40.1",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "curupira",
    "e2e",
    "playwright",
    "testing",
    "chrome-extension"
  ]
}
