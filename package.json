{
  "name": "curupira",
  "version": "1.1.3",
  "description": "MCP Frontend Debugging Tool - AI-powered debugging for React applications",
  "private": false,
  "type": "module",
  "workspaces": [
    "mcp-server",
    "chrome-extension",
    "shared",
    "cli"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "// === DEVELOPMENT === ": "",
    "dev": "concurrently -n server,extension \"npm:dev:*\"",
    "dev:server": "cd mcp-server && npm run dev",
    "dev:extension": "cd chrome-extension && npm run dev",
    "dev:shared": "cd shared && npm run dev",
    "dev:docker": "docker-compose up -d && docker-compose logs -f curupira",
    "// === BUILDING === ": "",
    "build": "tsx build.ts",
    "build:clean": "tsx build.ts --clean",
    "build:shared": "cd shared && npm run build",
    "build:server": "cd mcp-server && npm run build",
    "build:extension": "cd chrome-extension && npm run build",
    "package:extension": "cd chrome-extension && npm run package",
    "build:staging": "NODE_ENV=staging npm run build",
    "// === DOCKER & DEPLOYMENT === ": "",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t drzzln/curupira:latest .",
    "docker:build:version": "docker buildx build --platform linux/amd64,linux/arm64 -t drzzln/curupira:$(node -p \"require('./package.json').version\") .",
    "docker:push:latest": "docker buildx build --platform linux/amd64,linux/arm64 -t drzzln/curupira:latest --push .",
    "docker:push:version": "docker buildx build --platform linux/amd64,linux/arm64 -t drzzln/curupira:$(node -p \"require('./package.json').version\") --push .",
    "docker:push:both": "docker buildx build --platform linux/amd64,linux/arm64 -t drzzln/curupira:latest -t drzzln/curupira:$(node -p \"require('./package.json').version\") --push .",
    "version:bump:patch": "npm version patch --no-git-tag-version",
    "version:bump:minor": "npm version minor --no-git-tag-version",
    "version:bump:major": "npm version major --no-git-tag-version",
    "// === TESTING === ": "",
    "test": "npm run test:verify:all",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:verify:all": "npm run test:verify:core && npm run test:verify:integration && echo 'ðŸŽ‰ All Core Tests Verified!'",
    "test:verify:core": "cd mcp-server && npx vitest run src/__tests__/mcp/tools/ src/__tests__/mcp/resources/",
    "test:verify:integration": "cd mcp-server && npx vitest run src/__tests__/integration/mcp-server.test.ts",
    "test:verify:count": "npm run test:verify:core 2>&1 | grep -E 'Test Files|Tests' | tail -2",
    "// === TEST SUITES (by level) === ": "",
    "test:level0": "vitest run src/__tests__/{types,errors,utils,constants}/**/*.test.ts",
    "test:level1": "vitest run src/__tests__/chrome/**/*.test.ts",
    "test:level2": "npm run test:verify:core",
    "test:level4": "npm run test:verify:integration",
    "test:e2e": "vitest run src/__tests__/e2e/**/*.test.ts",
    "// === TEST TOOLS (individual providers) === ": "",
    "test:cdp-tools": "vitest run src/__tests__/mcp/tools/cdp-tools.test.ts",
    "test:react-tools": "vitest run src/__tests__/mcp/tools/react-tools.test.ts",
    "test:performance-tools": "vitest run src/__tests__/mcp/tools/performance-tools.test.ts",
    "test:state-tools": "vitest run src/__tests__/mcp/tools/*state-tools.test.ts src/__tests__/mcp/tools/*zustand-tools.test.ts",
    "// === CODE QUALITY === ": "",
    "lint": "npm run lint:check -- --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint:check && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint && npm run format",
    "// === SETUP & INSTALLATION === ": "",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "setup": "npm run install:all && npm run build:shared && cp .env.example .env",
    "setup:dev": "npm run setup && npm run chrome:extension:load",
    "clean": "npm run clean:dist && npm run clean:deps",
    "clean:dist": "rm -rf dist */dist *.tsbuildinfo */*.tsbuildinfo",
    "clean:deps": "rm -rf node_modules */node_modules",
    "clean:all": "npm run clean && rm -rf .env coverage",
    "reset": "npm run clean:all && npm run setup:dev",
    "// === CHROME EXTENSION === ": "",
    "chrome:dev": "google-chrome --load-extension=./chrome-extension/dist --user-data-dir=/tmp/curupira-dev",
    "chrome:extension:load": "echo 'Load unpacked extension from: chrome-extension/dist'",
    "chrome:inspect": "google-chrome chrome://inspect",
    "// === DOCKER OPERATIONS === ": "",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f curupira",
    "docker:shell": "docker-compose exec curupira sh",
    "docker:restart": "npm run docker:stop && npm run docker:run",
    "// === DEPLOYMENT === ": "",
    "deploy:staging": "npm run build:staging && npm run docker:build && ./scripts/deploy-staging.sh",
    "deploy:infrastructure:staging": "npx heimdizzy deploy staging",
    "deploy:check": "kubectl -n novaskyn-staging get pods -l app=curupira",
    "// === PUBLISHING & RELEASE === ": "",
    "prepublish:check": "npm run quality && npm run test && npm run build",
    "publish:prepare": "npm run prepublish:check",
    "publish:npm": "npm publish --workspaces --access public",
    "release:patch": "npm run version:bump:patch && npm run docker:push:both && echo 'Released patch version'",
    "release:minor": "npm run version:bump:minor && npm run docker:push:both && echo 'Released minor version'",
    "release:major": "npm run version:bump:major && npm run docker:push:both && echo 'Released major version'",
    "release": "npm run prepublish:check && npm run release:patch",
    "// === UTILITIES === ": "",
    "docs:serve": "cd docs && python -m http.server 8000",
    "docs:check": "ls -la docs/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "debugging",
    "react",
    "devtools",
    "chrome-extension",
    "ai-assistant"
  ],
  "author": "Nexus Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drzln/curupira.git"
  },
  "bugs": {
    "url": "https://github.com/drzln/curupira/issues"
  },
  "homepage": "https://github.com/drzln/curupira#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "ws": "^8.16.0"
  }
}
